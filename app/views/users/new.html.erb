<div class="container">

  <div class="alignForm">
  <h1>Registrar</h1>

    <% if @user.errors.any? %>
    <div style="color: red;">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="liError"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: signup_path do |form| %>

    <div>
      <%= form.label :Insira_o_usuario %>
      <%= form.text_field :username %>
    </div>

    <div>
      <%= form.label :Senha%>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.label :confirmar_senha %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div>
      <%= form.submit "Criar Conta", class:"zoom-btn" %>
    </div>
  <% end %>


  </div>
  <div class="divVoltar">
    <%= link_to 'Voltar', root_path, class: "voltarForm" %>
  </div>
</div>