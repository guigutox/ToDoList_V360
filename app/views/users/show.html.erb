<div class="container">
<h1>Seu perfil</h2>
<h3>Nome de usu√°rio: <%= current_user.username %></h3>

<%= button_to 'Excluir conta', user_path(current_user), method: :delete, data: { confirm: "Tem certeza?"}, form: { style:"all:unset"}, id: "btn-delete-profile" %>

<%= form_with url: update_password_path, method: :patch, local: true do |f| %>

    <% if flash[:notice] %>
        <div class="alert alert-success">
        <%= flash[:notice] %>
        </div>
    <% end %>
    
    <% if flash[:alert] %>
        <div class="alert alert-danger">
        <%= flash[:alert] %>
        </div>
    <% end %>

    <div>
      <%= label_tag :current_password, "Senha atual" %><br>
      <%= password_field_tag :current_password %>
    </div>
  
    <div>
      <%= label_tag :new_password, "Nova senha" %><br>
      <%= password_field_tag :new_password %>
    </div>
  
    <div>
      <%= label_tag :new_password_confirmation, "Confirmar nova senha" %><br>
      <%= password_field_tag :new_password_confirmation %>
    </div>
  
    <div>
      <%= f.submit "Atualizar senha" %>
    </div>
<% end %>


  <div class="divVoltar">
    <%= link_to 'Voltar', todo_lists_path, class: "voltarForm" %>
  </div>



</div>


