
<div class="container">

  <div class="alignForm">
    <h1>Entrar</h1>
    <% if flash[:alert] %>
    <p class="pError"><%= flash[:alert] %></p>
    <% end %>
    <%= form_with url: login_path, method: :post do |form| %>
      <div>
        <%= form.label :Usuario %>
        <%= form.text_field :username %>
      </div>

      <div>
        <%= form.label :Senha %>
        <%= form.password_field :password %>
      </div>

      <div>
        <%= form.submit "Entrar" %>
      </div>
    <% end %>



    <p style="text-align: center;">NÃ£o tem uma conta? <%= link_to "Registrar", signup_path, class:"emphasis"%></p>
  </div>
</div>