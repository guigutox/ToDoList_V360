<div class="container">

  <h1>Editar Item da Lista: <%= @todo_list.title %></h1>

  <%= form_with model: [@todo_list, @todo_item], local: true do |form| %>
    <% if @todo_item.errors.any? %>
      <div>
        <h3><%= pluralize(@todo_item.errors.count, "erro") %> ao salvar:</h3>
        <ul>
          <% @todo_item.errors.full_messages.each do |message| %>
            <li class="liError"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
            
    <div>
      <%= form.label :content, "Descrição da Tarefa" %>
      <%= form.text_field :content %>
    </div>

    <div>
      <%= form.label :done, "Concluído?" %>
      <%= form.check_box :done %>
    </div>

    <div>
      <p> <strong>Data de Criação:</strong> <%= @todo_item.created_at.strftime("%d/%m/%Y %H:%M") %></p>
      <p> <strong>Data de Atualização:</strong> <%= @todo_item.updated_at.strftime("%d/%m/%Y %H:%M") %></p>  
    </div>

    <div>
      <%= form.submit "Atualizar Item" %>
    </div>


  <% end %>
  


  <div class="divVoltar">
    <%= link_to 'Voltar', todo_list_path(@todo_list), class:"voltarForm" %>
  </div>
</div>