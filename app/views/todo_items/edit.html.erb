<div class="container">

  <h1>Edição de item</h1>

  <%= form_with model: [@todo_list, @todo_item], local: true do |form| %>
    <% if @todo_item.errors.any? %>
      <div>
        <ul>
          <% @todo_item.errors.full_messages.each do |message| %>
            <li class="liError"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
            
    <div>
      <%= form.label :content, "Descrição da Tarefa" %>
      <%= form.text_field :content %>
    </div>

    <div class="field">
      <%= form.label :priority, "Prioridade" %><br>
      <%= form.select :priority, TodoItem.priorities.keys.map { |k| [k.titleize, k] } %>
    </div>


   <!-- <div>
      <%= form.label :done, "Concluído?" %>
      <%= form.check_box :done %>
    </div> -->

    <div class="datas">
      <p> <strong>Criado em:</strong> <%= @todo_item.created_at.strftime("%d/%m/%Y") %></p>
      <p> <strong>Atualizado em:</strong> <%= @todo_item.updated_at.strftime("%d/%m/%Y %H:%M") %></p>  
    </div>

    <div>
      <%= form.submit "Atualizar Item", class:"zoom-btn" %>
    </div>


  <% end %>
  


  <div class="divVoltar">
    <%= link_to 'Voltar', todo_list_path(@todo_list), class:"voltarForm" %>
  </div>
</div>