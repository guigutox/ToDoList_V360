<div class="container">

  <h1>Adicionar Item</h1>

  <%= form_with model: [@todo_list, @todo_item], local: true do |form| %>
    <% if @todo_item.errors.any? %>
      <div>
        <h3><%= pluralize(@todo_item.errors.count, "erro") %> ao salvar:</h3> 
        <ul>
          <% @todo_item.errors.full_messages.each do |message| %>
            <li class="liError"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :content, "Descrição da Tarefa" %>
      <%= form.text_field :content %>
    </div>

    <div class="field">
      <%= form.label :priority, "Prioridade" %><br>
      <%= form.select :priority, TodoItem.priorities.keys.map { |k| [k.titleize, k] } %>
    </div>

<!--
    <div>
      <%= form.label :done, "Concluído?" %>
      <%= form.check_box :done %>
    </div> -->

    <div>
      <%= form.submit "Adicionar Item", class: "zoom-btn" %>
    </div>
  <% end %>
  <div class="divVoltar">
    <%= link_to 'Voltar para itens', todo_list_path(@todo_list), class:'voltarForm' %>
  </div>
</div>