<div class="container">

<h1>Listas de Tarefas</h1>
<div class="divisoria"></div>

<% if current_user %>
  <p>Logado como: <strong><%= current_user.username %></strong></p>
  <%= button_to "Logout", logout_path, method: :delete, data: { confirm: "Deseja realmente sair?" } %>
<% end %>


<ul>
  <% @todo_lists.each do |todo_list| %>
    <li>
      <span class="todo-title"><%= link_to todo_list.title, todo_list %></span>
      <span class="todo-actions">
        <%= link_to '🗑️', todo_list, class: 'rightli delete', data: { 
          turbo_method: :delete, 
          turbo_confirm: 'Tem certeza?' 
        } %>
        <%= link_to '✏️', edit_todo_list_path(todo_list), class: 'rightli edit' %> 
      </span>
    </li>
  <% end %>
</ul>

  <div style="text-align: right; margin-top: 30px;">
    <%= link_to 'Nova Lista', new_todo_list_path, class: 'btn btn-criar zoom-btn' %>
  </div>

</div>