<div class="container">
  <h1>Criar Nova Lista</h1>

  <%= form_with model: @todo_list, local: true do |form| %>
    <% if @todo_list.errors.any? %>
      <div>
        <h3><%= pluralize(@todo_list.errors.count, "erro") %> ao salvar:</h3>
        <ul>
          <% @todo_list.errors.full_messages.each do |message| %>
            <li class="liError"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :Titulo %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </div>


    <div>
      <%= form.submit "Criar Lista", class: "zoom-btn" %>
    </div>
  <% end %>

  <div class="divVoltar">
    <%= link_to 'Voltar', todo_lists_path, class: "voltarForm" %>
  </div>
</div>
